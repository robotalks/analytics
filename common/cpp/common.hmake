---
format: hypermake.v0

targets:
  build-common-[arch:amd64,armhf]:
    description: common C++ library
    after:
      - build-dep-cxxopts
      - build-dep-boost-$[arch]
      - build-dep-cpp-netlib-$[arch]
      - build-dep-mosquitto-$[arch]
    watches:
      - inc
      - src
      - CMakeList.txt
      - /cmake
    env:
      - MAKE_OPTS
    cmds:
      - build-cmake.sh $[arch] common/cpp Release libcmn.a
    artifacts:
      - /out/$[arch]/lib/libcmn.a
